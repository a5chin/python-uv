{
    "ensure_final_newline_on_save": true,
    "file_types": {
        "JSON": ["jsonc"]
    },
    "format_on_save": "on",
    "languages": {
        "Dockerfile": {
            "tab_size": 4
        },
        "JSON": {
            "tab_size": 4
        },
        "JSONC": {
            "tab_size": 4
        },
        "Python": {
            "language_servers": ["ruff", "ty", "!basedpyright"],
            "tab_size": 4
        },
        "SQL": {
            "formatter": {
                "language_server": { "name": "sqruff" }
            },
            "tab_size": 2
        },
        "TOML": {
            "formatter": {
                "language_server": { "name": "tombi" }
            },
            "tab_size": 4
        },
        "YAML": {
            "tab_size": 2
        }
    },
    "language_servers": ["codebook"],
    "lsp": {
        "ruff": {
            "initialization_options": {
                "settings": {
                    "configuration": "ruff.toml"
                }
            }
        }
    },
    "remove_trailing_whitespace_on_save": true
}
