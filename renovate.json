{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "branchPrefix": "renovate/",
    "extends": [
        "config:recommended"
    ],
    "labels": [
        "renovate"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "automerge": true,
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ]
        }
    ],
    "rebaseWhen": "behind-base-branch",
    "schedule": [
        "* 0-23 * * *"
    ],
    "separateMajorMinor": false,
    "timezone": "Asia/Tokyo"
}
